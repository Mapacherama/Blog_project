<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
<div>
    <a asp-controller="Home" asp-action="Index">Home</a>
    <a asp-controller="Panel" asp-action="Edit">Create post</a>
    
    <a asp-controller="Panel" asp-action="Index">Admin Panel</a>

    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="Auth" asp-action="Logout">Logout, or Sign out over here!</a>
    }
    else
    {
        <a asp-controller="Auth" asp-action="Login">Login, or Sign in over here!</a>
    }
    
</div>
<div>
    @RenderBody()
</div>

</body>
</html>