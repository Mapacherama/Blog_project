<section class="panel section">
    <div class="panel__container container flex">
        <div class="flex">
            <h2 class="section__title">Admin Panel!</h2>
            <a class="panel__link" asp-controller="Panel" asp-action="Edit">
                <h3 class="panel__new__post">Add New Post</h3>
            </a>
        </div>
        <div class="flex">
            <ul class="panel__links">
                @foreach (var post in Model)
                {
                    <li class="panel__list">
                        <h2 class="section__title">@post.Title</h2>
                        <span class="panel__link">-</span>
                        <a class="panel__link" asp-controller="Panel" asp-action="Edit" asp-route-id="@post.Id">
                            Edit
                        </a>
                        <span class="panel__link">-</span>
                        <a class="panel__link" asp-controller="Panel" asp-action="Remove" asp-route-id="@post.Id">
                            Remove
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</section>