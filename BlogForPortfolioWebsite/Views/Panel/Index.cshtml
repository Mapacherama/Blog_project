<section class="panel section">
    <div class="panel__container container flex">
        <div class="flex__admin-button">
            <h2 class="section__title title__container">Admin Panel!</h2>
            <a class="panel__link" asp-controller="Panel" asp-action="Edit">
                <h3 class="panel__new__post button button--flex">Add New Post</h3>
            </a>
        </div>
        <div class="flex">
            <h2 class="section__title margin-bottom">List of blog posts, you can edit as administrator:</h2>
            <ul class="panel__links">
                @foreach (var post in Model)
                {
                    <li class="panel__list">
                        <h2 class="section__subtitle-left">@post.Title</h2>
                        <span>-</span>
                        <a class="panel__link" asp-controller="Panel" asp-action="Edit" asp-route-id="@post.Id">
                            <span class="panel__edit__post">Edit</span>
                        </a>
                        <span>-</span>
                        <a class="panel__link" asp-controller="Panel" asp-action="Remove" asp-route-id="@post.Id">
                            <span class="panel__remove__post">Remove</span>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</section>